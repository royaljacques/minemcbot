// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  discordId  String  @id
  pseudo     String  @unique
  language   String @default("en")
  mana       Int @default(10)
  manaMax    Int @default(10)
  xp         Int @default(0)
  xpMax      Int @default(50)
  level      Int @default(0)
  health     Int @default(25)
  healthMax  Int @default(25)
  power      Int @default(0)
  maxPower   Int @default(10)
  itemInHand Int?
  vote       Boolean @default(false)
  manaTimer  DateTime @default(now())
}

model Item {
  id        Int    @id @default(autoincrement())
  type      String
  level     Int    @default(0)
  discordId String
}

model Ressource {
  discordId String @unique
  stone     Int    @default(0)
  dirt      Int    @default(0)
  coal      Int    @default(0)
}

model Chest {
  discordId String @unique
  vote      Int    @default(0)
  common    Int    @default(0)
  rare      Int    @default(0)
  epic      Int    @default(0)
  legendary Int    @default(0)
  mythic    Int    @default(0)
  relic     Int    @default(0)
}

model serverConfig{
  serverId String @id @unique
  onlyChannel Boolean @default(false)
  channel String? @default("")
}
