// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  discordId String @id
  pseudo    String @unique
  language  String
  mana      Int
  manaMax   Int
  xp        Int
  xpMax     Int
  level     Int
  health    Int
  healthMax Int
  power     Int
  maxPower  Int
  itemInHand Int?
}

model Inventory {
  discordID String  @id @unique
  items     Tools[]
}

model Tools {
  id                 Int            @id @default(autoincrement())
  level              Int            @default(0) 
  type               String
  enchantments        Enchantments[] 
  Inventory          Inventory?     @relation(fields: [inventoryDiscordID], references: [discordID])
  inventoryDiscordID String?
}

model Enchantments {
  id      Int    @id @default(autoincrement())
  type    String
  tools   Tools? @relation(fields: [toolsId], references: [id])
  toolsId Int?
}
